{
    "servers": {
        "git": {
            "command": "uvx",
            "args": [
                "mcp-server-git",
                "--repository",
                "${workspaceFolder:ROOT}"
            ]
        },
        "postgres": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "mcp/postgres",
                "postgresql://host.docker.internal:5432/statemanagement"
            ]
        }
    }
}