{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"rootDir": ".",
		"paths": {
			"~/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests"
	]
}