	},
	"devDependencies": {
		"@biomejs/biome": "1.8.2",
		"globals": "^15.2.0",
		"httpyac": "^6.15.1",
		"jsdoc": "^4.0.3",
		"nodemon": "^3.1.0",
		"supertest": "^7.0.0",
		"vitest": "^2.0.5"
